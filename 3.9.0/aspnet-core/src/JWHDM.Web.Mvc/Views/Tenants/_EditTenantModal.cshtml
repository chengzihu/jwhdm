@using Abp.MultiTenancy
@using JWHDM.MultiTenancy.Dto
@using JWHDM.Web.Models.Common.Modals
@model TenantDto
@{
    Layout = null;
}
@*@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditTenant")))*@
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title" id="ModalLabel"></h4>
</div>
<div class="modal-body">
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#tabuser" aria-controls="home" role="tab" data-toggle="tab">租户</a></li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane in active" id="tabuser">
            <form class="form-horizontal" role="form" id="user-form" style="padding: 10px" method="post">
                <div class="form-group">
                    <label for="tenancyName" class="form-label">@L("TenancyName")</label>
                    <input type="text" name="id" value="@Model.Id" class="form-control" id="id" placeholder="id" style="display:none">
                    <input id="tenancyName" type="text" name="TenancyName" value="@Model.TenancyName" required maxlength="32" minlength="2" class="validate form-control">
                </div>
                <div class="form-group">
                    <label for="name" class="form-label">@L("Name")</label>
                    <input id="name" type="text" name="name" value="@Model.Name" required maxlength="32" minlength="2" class="validate form-control">
                </div>
                <div class="form-group">
                    <label for="txt_departmentlevel">是否启用</label>
                    <div class="checkbox">
                        <label>
                            <input id="isActive" @(Model.IsActive ? "checked" : "") type="checkbox">
                            @*<input id="isActive" type="checkbox" name="isActive" value="true" @(Model.IsActive ? "checked" : "") class="form-control" />*@
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
    <button type="button" id="btn_submit" class="btn btn-primary" data-dismiss="modal"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>保存</button>
</div>
<script src="~/view-resources/Views/Tenants/_EditTenantModal.js" type="text/javascript">
</script>
