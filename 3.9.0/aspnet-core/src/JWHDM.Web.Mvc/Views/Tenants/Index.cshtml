@using Abp.Authorization.Users
@using Abp.MultiTenancy
@using JWHDM.MultiTenancy
@using JWHDM.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.Tenants; // The menu item will be active for this page.
}

<section class="content">
    <div class="panel-body" style="padding-bottom:0px;">
        <div class="panel panel-default">
            <div class="panel-heading">查询条件</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group" style="margin-top:15px">
                        <label class="control-label col-sm-1" for="txt_search_departmentname">姓名</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="txt_search_departmentname">
                        </div>
                        <label class="control-label col-sm-1" for="txt_search_statu">昵称</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="txt_search_statu">
                        </div>
                        <div class="col-sm-4" style="text-align:left;">
                            <button type="button" style="margin-left:50px" id="btn_query" class="btn btn-primary">查询</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <table id="table" class="table"></table>
        <div id="toolbar" class="btn-group">
            <button id="btn_add" type="button" class="btn btn-success">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
            </button>
            <button id="btn_edit" type="button" class="btn btn-warning">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
            </button>
            <button id="btn_delete" type="button" class="btn btn-danger">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
            </button>
        </div>
        <table id="tb_departments"></table>
    </div>

    <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="ModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#tabuser" aria-controls="home" role="tab" data-toggle="tab">租户</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane in active" id="tabuser">
                            <form class="form-horizontal" role="form" id="user-form" style="padding: 10px" method="post">
                                <div class="form-group">
                                    <label for="tenancyName" class="form-label">@L("TenancyName")</label>
                                    <input type="text" name="id" class="form-control" id="id" placeholder="id" style="display:none">
                                    <input id="tenancyName" type="text" name="TenancyName" required maxlength="32" minlength="2" class="validate form-control">
                                </div>
                                <div class="form-group">
                                    <label for="name" class="form-label">名称</label>
                                    <input id="name" type="text" name="name" required maxlength="32" minlength="2" class="validate form-control">
                                </div>
                                <div class="form-group">
                                    <label for="adminEmailAddress" class="form-label">邮箱</label>
                                    <input id="adminEmailAddress" type="text" name="adminEmailAddress" required maxlength="32" minlength="2" class="validate form-control">
                                </div>
                                <div class="form-group" style="display:none">
                                    <label for="connectionString" class="form-label">数据加连接字符串</label>
                                    <input id="connectionString" type="text" name="connectionString" required maxlength="32" minlength="2" class="validate form-control">
                                </div>
                                <div class="form-group">
                                    <label for="txt_departmentlevel">启用</label>
                                    <div class="checkbox">
                                        <label>
                                            <input id="isActive" value="true" name="isActive" type="checkbox">
                                        </label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                    <button type="button" id="btn_save" class="btn btn-primary" data-dismiss="modal"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>保存</button>
                </div>
            </div>
        </div>
    </div>
</section>
